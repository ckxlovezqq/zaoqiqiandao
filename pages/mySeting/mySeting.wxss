

/* 公共 */
@import "../../public.wxss";

/* 主体 */

button {
    padding: 0;
    margin: 0;
    border-radius: 0;
    text-align: inherit;
    font-size: inherit;
    color: inherit;
    background-color: transparent;
    overflow: visible;
}

button:after {
    display: none !important;
}

.xui-cell {
    position: relative;
    display: -webkit-flex;
    display: flex;
    -webkit-align-items: center;
    align-items: center;
    padding: 14px 9px;
    line-height: 1.6
}

.xui-cell:before {
    content: " ";
    position: absolute;
    left: 9px;
    top: 0;
    right: 9px;
    height: 1px;
    border-top: 1px solid #e4e4e4;
    color: #D9D9D9;
}

.xui-cell:first-child:before {
    display: none;
}

.xui-cell_active {
    background-color: #ececec;
}

.xui-cell_primary {
    -webkit-align-items: flex-start;
    align-items: flex-start;
}

.xui-cell__bd {
    -webkit-flex: 1;
    flex: 1;
}

.xui-cell__ft {
    text-align: right;
    font-size: 13px;
    color: #666;
}

.xui-cell_access {
    color: inherit;
}

.xui-cell__ft_in-access {
    position: relative;
    padding-right: 21px;
}

.xui-cell__ft_in-access:after {
    content: " ";
    position: absolute;
    top: 50%;
    right: 5px;
    display: inline-block;
    height: 5px;
    width: 5px;
    margin-top: -4px;
    border-width: 1px 1px 0 0;
    border-color: #ccc;
    border-style: solid;
    -webkit-transform: matrix(1, 1, -1, 1, 0, 0);
    transform: matrix(1, 1, -1, 1, 0, 0);
}

.xui-cell_link {
    color: #586C94;
    font-size: 13px;
}

.xui-cell_link:active {
    background-color: #ececec;
}

.xui-cell_link:first-child:before {
    display: block;
}

.menu-group {
    background-color: #fff;
}

.avatar-item .avatar-box {
    width: 43px;
    height: 43px;
    border-radius: 50%;
}

.avatar-item .avatar-box image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.bg-item .bg-box {
    width: 43px;
    height: 43px;
}

.bg-item .bg-box image {
    width: 100%;
    height: 100%;
    border-radius: 3px;
}
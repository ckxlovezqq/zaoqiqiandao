
@import "../../public.wxss";
/* 主体 */
.new-clock-btn{ display: -webkit-flex; display: flex; -webkit-justify-content: center; justify-content: center; -webkit-align-items: center; align-items: center; width: 168px; height:40px; margin: 14px auto; font-size:13px; color: #1DACA9; border: 1px solid #1DACA9; border-radius: 2px; }
.new-clock-btn--tips{ background-color: #1DACA9; color: #fff; }
.new-clock-btn .icon{ font-size: 12px; margin-right: 6px; }
button{ padding:0; margin:0; border-radius:0; text-align: inherit; font-size: inherit; line-height: inherit; color: inherit; background-color: transparent; }
button:after{ display: none !important; }
button image{ width: 100%; height:180px; }
.card-item-one { margin: 14px 9px 0; padding-bottom: 7px; width: 340px; border-bottom: 1px solid #E4E4E4; border-radius: 2px; box-sizing: border-box; overflow: hidden; }
.card-item-left { width: 144px; height: 100%; float: left; }
.card-item-left image{ width: 144px; height: 96px; border-radius: 2px; }
.card-item-right{ width: 187px; margin-top: 2px; margin-left: 153px; }
.card-item-title{ font-family: PingFangSC-Medium; font-size: 15px; line-height: 19px; color: #333333; letter-spacing: 0; margin: 3px 0; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; }
.card-item-intro{ background: #FFF7F4; border: 1px solid #FC642D; border-radius: 1px; font-size: 11px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; color: #FC642D; display:inline; padding:2px; }
.card-item-author{ display: -webkit-flex; display: flex; -webkit-align-items: center; align-items: center; font-size: 11px; margin-top: 3px; color: #9B9B9B; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
.card-item-author image{ width: 14px; height: 14px; border: 1px solid #fff; border-radius: 50%; box-sizing: border-box; }
.card-item-author text{ font-family: PingFang-SC-Regular; margin-left: 4px; line-height: 23px; font-size: 11px; color: #666666; }
.card-item-amount { display: -webkit-flex; display: flex; font-size: 11px; color: #666666; }
.card-item-amount .line{ margin: 0 7px; }
.banner{ width: 100%; height: 180px; }
.banner image{ width: 100%; height: 100%; }
.h1{ font-size: 18px; }
.f-34{font-size: 16px}
.f-30{font-size: 14px}
.no-data-box{ display: -webkit-flex; display: flex; -webkit-flex-direction: column; flex-direction: column; -webkit-align-items: center; align-items: center; padding-top: 33px ; padding-bottom: 76px ; background-color: #fff; }
.no-data-box image{ width: 103px; height: 103px; }
.no-data-desc{ font-size: 13px; color: #666666; text-align: center; }
.no-data-desc .under_line{ text-decoration: underline; color: #1DACA9; }
.xf-banner{ width:100%; height: 180px; }
.xf-banner__item > image{ width: 100%; height: 100%; }
.label-title { font-weight: 500; font-size: 18px; color: #333333; margin-left: 9px; margin-top: 9px; }
.tag-area { text-align: center; margin-top: 14px; }
.tag-item{ display: inline-block; font-size: 13px; color: #666666; width: 18%; border: 1px solid #E1E1E1; border-radius: 4px; margin: 1%; padding: 1% 2%; }
.tag-item.selected { background-color: #E9FFFF; color: #1daca9; border: 1px solid #1daca9; }